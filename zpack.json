{
  "$schema": "https://github.com/glzr-io/zebar/raw/v3.1.0/resources/zpack-schema.json",
  "name": "bar-rose-pine",
  "version": "0.0.1",
  "description": "Simple bar with rose-pine theme and komorebi support workspaces support",
  "tags": ["workspaces", "komorebi", "rose-pine", "media"],
  "previewImages": ["assets/preview_1.png"],
  "repositoryUrl": "",
  "widgets": [
    {
      "name": "bar",
      "htmlPath": "./dist/index.html",
      "zOrder": "normal",
      "shownInTaskbar": false,
      "focused": false,
      "resizable": false,
      "transparent": true,
      "includeFiles": ["**/**"],
      "caching": {
        "defaultDuration": 604800,
        "rules": []
      },
      "privileges": {
        "shellCommands": [
          {
            "program": "komorebic",
            "argsRegex": ".*"
          }
        ]
      },
      "presets": [
        {
          "name": "default",
          "anchor": "top_left",
          "offsetX": "0px",
          "offsetY": "0px",
          "width": "100%",
          "height": "40px",
          "monitorSelection": {
            "type": "all"
          },
          "dockToEdge": {
            "enabled": true,
            "edge": null,
            "windowMargin": "0px"
          }
        }
      ]
    }
  ]
}
